<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.pet.WenActivity">

    <androidx.appcompat.widget.Toolbar
        app:title="问诊界面"
        android:id="@+id/YY"
        android:background="#81CFF2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:layout_height="200dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/do_avatar"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="80dp"
                    android:layout_height="100dp"/>
                <TextView
                    android:id="@+id/do_name"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="130dp"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/do_zhicheng"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="130dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/do_bianhao"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="130dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/miaoshu1"
                    android:layout_marginTop="120dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="40dp"
            app:cardCornerRadius="20dp"
            android:layout_width="350dp"
            android:layout_height="200dp">

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_miaoshu"
                    android:hint="问题描述"
                    android:gravity="center"
                    android:background="@drawable/no_bj"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/pet_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>

                    <Button
                        android:id="@+id/shangchuan"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="100dp"
                        android:text="上传图片"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/tijiao"
            android:textColor="#fff"
            android:background="@drawable/bj"
            android:text="提交"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>


</LinearLayout>